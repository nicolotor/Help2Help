<div class="banner" id="banner-home" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dvf1ekp5b/image/upload/v1596720093/uniqsurface-xvjpZDHoEAo-unsplash_qa3vmy.jpg');">
  <div class="container">
    <h1>You living with it? Us Too!</h1> <br>


    <%= form_tag profiles_path, method: :get do %>
      <div class="form-row">
        <div class="col">
          <%= text_field_tag :disease,
            params[:disease],
            class: "form-control",
            placeholder: "What are you living with?"
          %>
        </div>
      
        <div class="col-3">
          <%= text_field_tag :address,
            params[:address],
            class: "form-control",
            id: "location-search-home",
            placeholder: "Where?"
          %>
        </div>
        <div class="col">
          <%= submit_tag "Find Us!", class: "btn-secondary" %>
        </div>
      </div>
    <% end %>

  </div>


</div>