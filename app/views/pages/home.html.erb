

<!-- banner -->
<div class="banner mb-5" id="banner-home" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url('https://res.cloudinary.com/tungtzet/image/upload/v1597141144/hugging-each-other_new_a7nz0r.jpg');">
  <!-- <div class="container"> -->

<!-- form with question -->
    <div class="container">
      <%= form_tag profiles_path, method: :get do %>
      <!-- <div class="form-row"> -->
        <div class="col-7" id="banner_form">
          <%= text_field_tag :disease,
          params[:disease],
          class: "form-control",
            placeholder: "What's your condition?",
            style: "border-radius: 20px"
            %>
            <!-- <div> -->
              <%= submit_tag "Find Us!", class: "btn btn-secondary btn-search", id: "find_us_btn"%>
            <!-- </div> -->
            <h2>Find people with the same condition.<br>You are not alone.</h2>
        </div>
      <!-- </div> -->
      <% end %>
    </div>
  <!-- </div> -->
</div>

