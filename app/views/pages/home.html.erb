<div class="container">
 <h2>Or just find out there is someone out there <br>also having what you have</h2>
  <%= form_tag profiles_path, method: :get do %>
    <div class="form-row">
      <div class="col">
        <%= text_field_tag :disease,
          params[:disease],
          class: "form-control",
          placeholder: "What are you living with?"
        %>
      </div>

      <div class="col-3">
        <%= text_field_tag :address,
          params[:address],
          class: "form-control",
          id: "address-search-home",
          placeholder: "Where?"
        %>
      </div>
      <div class="col">
        <%= submit_tag "Find Us!", class: "btn-secondary" %>
      </div>
    </div>
  <% end %>
