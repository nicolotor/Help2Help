<div class="container">
  <h1>We have what you have</h1>
  <div class="col-12 col-lg-12">
    <div class="cards d-flex flex-wrap">
      <% @profiles.each do |profile| %>
      <div class="card-profile-index">
        <%= cl_image_tag profile.photo.key if profile.photo.attached? %>
        <div class="card-profile-index-infos">
          <h5><%= profile.name %></h5>
          <h6> I have a disease </h6>
          <p><%= link_to "See more", profile_path(profile) %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
