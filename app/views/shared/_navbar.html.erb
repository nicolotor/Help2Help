<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dvf1ekp5b/image/upload/v1596637861/SportRentlogo_squbnx.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to current_user.email, "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
        <% if current_user.profile.photo.attached? %>
          <%= cl_image_tag current_user.profile.photo.key, transformation: [
            {width: 400, height: 400, gravity: "face", crop: "crop"},
            {width: 200, crop: "scale"}], class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/dvf1ekp5b/image/upload/v1596719155/pexels-pixabay-163077_g12ert.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%# link_to "My Gears", user_items_path, class: "dropdown-item" %>
            <%# link_to "My Bookings", user_bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% if current_user.profile %>
              <%= link_to "My Profile", profile_path(current_user.id), class: "dropdown-item" %>
            <% else %>
              <%= link_to "Create A Profile", new_profile_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>