<div class="container my-5" id="post-container">
  <div class="row justify-content-center">
    <h1>Create a post/story </h1>
    <div class="" id="post-form">
  <%= simple_form_for(@post) do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, label: 'Short content:' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="form-inputs my-4">
    <%= f.rich_text_area :rich_body %>
  </div>
  <%= f.submit "Post", :class => "btn btn-success" %>
  <%= link_to 'Cancel', root_path, class: 'btn btn-danger ml2-2'%>
<% end %>
  </div>
  </div>
</div>
