


<br>
<% @posts.each do |post| %>
  <div class="container">
    <div class="card-trip">

        <div class="card-trip-infos">
          <h1><%= post.title %></h1>
          <p><%= post.content %></p>
          
        </div>
        <p><%= link_to "Show Post", post_path(post) %>
           <%= link_to "Delete", post_path(post), data: { confirm: 'Are you sure?'}, method: :delete, class: "btn-primary" %>
           <%= link_to "Edit", edit_post_path(post) %>
        </p>

         <%= cl_image_tag post.photos.first.key, height: 300, width: 400, crop: :fill  if post.photos.attached? %>
        
    </div>
  </div>
  <br>
 <% end %>

